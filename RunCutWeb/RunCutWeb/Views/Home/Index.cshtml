        function normalizeVal(v) {
            if (v == null || v === undefined) return '';
            const s = String(v).trim();
            return s;
        }

        function computeComparison(left, right) {
            const leftHeaders = left.headers || [];
            const leftRows = left.rows || [];
            const rightHeaders = right.headers || [];
            const rightRows = right.rows || [];
            const maxCols = Math.max(leftHeaders.length, rightHeaders.length);
            const maxRows = Math.max(leftRows.length, rightRows.length);

            const leftHighlights = Array(maxRows).fill(null).map(() => Array(maxCols).fill('match'));
            const rightHighlights = Array(maxRows).fill(null).map(() => Array(maxCols).fill('match'));

            const paddedLeftHeaders = [...leftHeaders];
            while (paddedLeftHeaders.length < maxCols) paddedLeftHeaders.push('');
            const paddedRightHeaders = [...rightHeaders];
            while (paddedRightHeaders.length < maxCols) paddedRightHeaders.push('');

            const paddedLeftRows = leftRows.map(row => {
                const r = [...(row || [])];
                while (r.length < maxCols) r.push('');
                return r;
            });
            while (paddedLeftRows.length < maxRows) paddedLeftRows.push(Array(maxCols).fill(''));

            const paddedRightRows = rightRows.map(row => {
                const r = [...(row || [])];
                while (r.length < maxCols) r.push('');
                return r;
            });
            while (paddedRightRows.length < maxRows) paddedRightRows.push(Array(maxCols).fill(''));

            for (let i = 0; i < maxRows; i++) {
                for (let j = 0; j < maxCols; j++) {
                    const leftVal = paddedLeftRows[i][j];
                    const rightVal = paddedRightRows[i][j];
                    const leftEmpty = normalizeVal(leftVal) === '';
                    const rightEmpty = normalizeVal(rightVal) === '';
                    let status = 'match';
                    if (leftEmpty && rightEmpty) status = 'missing';
                    else if (leftEmpty || rightEmpty) status = 'missing';
                    else if (normalizeVal(leftVal) !== normalizeVal(rightVal)) status = 'mismatch';
                    leftHighlights[i][j] = status;
                    rightHighlights[i][j] = status;
                }
            }

            return {
                leftHighlights,
                rightHighlights,
                leftHeaders: paddedLeftHeaders,
                leftRows: paddedLeftRows,
                rightHeaders: paddedRightHeaders,
                rightRows: paddedRightRows
            };
        }

        function renderValidatorTable(theadId, tbodyId, headers, rows, highlights) {
            const thead = document.getElementById(theadId);
            const tbody = document.getElementById(tbodyId);
            thead.innerHTML = '';
            tbody.innerHTML = '';
            if (!headers || !headers.length) return;
            const tr = document.createElement('tr');
            headers.forEach((h, j) => {
                const th = document.createElement('th');
                th.textContent = h ?? '';
                th.style.whiteSpace = 'nowrap';
                th.contentEditable = 'true';
                th.setAttribute('contenteditable', 'true');
                tr.appendChild(th);
            });
            thead.appendChild(tr);
            (rows || []).forEach((row, i) => {
                const rowTr = document.createElement('tr');
                const rowHighlights = (highlights && highlights[i]) || [];
                headers.forEach((_, j) => {
                    const td = document.createElement('td');
                    td.textContent = (row && row[j] != null) ? row[j] : '';
                    td.contentEditable = 'true';
                    td.setAttribute('contenteditable', 'true');
                    const status = rowHighlights[j];
                    if (status === 'mismatch') {
                        td.classList.add('bg-warning');
                    } else if (status === 'missing') {
                        td.classList.add('bg-danger', 'text-white');
                    }
                    td.style.whiteSpace = 'nowrap';
                    rowTr.appendChild(td);
                });
                tbody.appendChild(rowTr);
            });
        }

        function getValidatorTableData(theadId, tbodyId) {
            const thead = document.getElementById(theadId);
            const tbody = document.getElementById(tbodyId);
            const headers = [];
            const firstRow = thead && thead.querySelector('tr');
            if (firstRow) {
                firstRow.querySelectorAll('th').forEach(th => headers.push((th.textContent || '').trim()));
            }
            const rows = [];
            if (tbody) {
                tbody.querySelectorAll('tr').forEach(tr => {
                    const row = [];
                    tr.querySelectorAll('td').forEach(td => row.push((td.textContent || '').trim()));
                    rows.push(row);
                });
            }
            return { headers, rows };
        }

